<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>
<p>
<% @articles.each do |article| %>
  <h3><%= link_to article.title, article_path(article)%></h3>
  <p><%= article.content %></p>
  <%= image_tag('http://unsplash.it/700x300') %>

  <%= link_to "Create", new_article_path(article) %>
  <%= link_to "Edit", edit_article_path(article) %>
  <%= link_to "Delete", article, method: :delete, data: { confirm: "Are you sure?"} %>

<% end %>

</p>
